<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming Subject"
        android:textColor="#F40505"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="90dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textViewAndroid"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Android Notes"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="normal"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/buttonClick"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/cardview_dark_background"
            android:backgroundTint="#23D1BC"
            android:text="Click"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewJava"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Java Notes"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="normal"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/buttonClick1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/cardview_dark_background"
            android:backgroundTint="#23D1BC"
            android:text="Click"
            android:textSize="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>



</LinearLayout>